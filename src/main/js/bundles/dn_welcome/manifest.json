{
  "Bundle-SymbolicName": "dn_welcome",
  "Bundle-Version": "1.0.0-SNAPSHOT",
  "Bundle-Name": "${bundleName}",
  "Bundle-Description": "${bundleDescription}",
  "Bundle-Vendor": "con terra GmbH",
  "Bundle-Icon": {},
  "Bundle-License": {},
  "Require-Bundle": [],
  "Product-Name": "devnet-mapapps-welcome",
  "Config-Bundle-Location": "/config",
  "CSS-Themes-Extension": [
    {
      "name": "*",
      "files": [
        "./css/style.css"
      ]
    }
  ],
  "layout-widgets": [
    {
      "widgetRole": "welcomeWidget",
      "template": "seasons",
      "sublayout": [
        "desktop",
        "tablet_landscape",
        "tablet_portrait"
      ],
      "window": {
        "title": "Welcome",
        "autofocus": false,
        "dockTool": "welcomeToggleTool",
        "minimizeOnClose": true,
        "resizable": true,
        "modal": true,
        "closable": false,
        "marginBox": {
          "w": "800",
          "h": "600"
        },
        "windowClass": "noPadding"
      }
    }
  ],
  "components": [
    {
      "name": "WelcomeWidgetFactory",
      "provides": "dijit.Widget",
      "instanceFactory": true,
      "properties": {
        "widgetRole": "welcomeWidget",
        "infoText": "",
        "buttonText": "",
        "checkboxText": "",
        "imgUrl": "",
        "imgHeight": "200",
        "accept": false
      },
      "references": [
        {
          "name": "_tool",
          "providing": "ct.tools.Tool",
          "filter": "(id=welcomeToggleTool)"
        }
      ]
    },
    {
      "name": "WelcomeToggleTool",
      "impl": "ct/tools/Tool",
      "provides": [
        "ct.tools.Tool"
      ],
      "propertiesConstructor": true,
      "properties": {
        "id": "welcomeToggleTool",
        "title": "${tool.title}",
        "tooltip": "${tool.tooltip}",
        "toolRole": "toolset",
        "iconClass": "icon-custom-info-imprint",
        "togglable": true,
        "rules": {
          "noGroup": true
        }
      }
    }
  ]
}