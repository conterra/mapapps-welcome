{
    "properties": {
        "title": "${title}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "banner",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "toolset",
            "dn_welcome"
        ],
        "require": [
            "${app}/app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_welcome": {
            "Config": {
                "heading": "${welcome.heading}",
                "infoText": "${welcome.infoText}",
                "showButton": true,
                "buttonText": "${welcome.buttonText}",
                "buttonDependsOnCheckbox": false,
                "showCheckbox": true,
                "checkboxChecked": true,
                "checkboxText": "${welcome.checkboxText}",
                "showImage": true,
                "imageHeight": "300px",
                "imageUrl": "resource('${app}:images/welcome.jpg')"
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "topo",
                        "title": "Topo",
                        "basemap": "topo-vector",
                        "selected": true
                    }
                ],
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 753914,
                        "ymin": 6590000,
                        "xmax": 797273,
                        "ymax": 6635000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "autumn"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "*"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        }
    }
}
