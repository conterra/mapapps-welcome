{
  "properties": {
    "title": "${apptitle}"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system",
      "banner",
      "console",
      "custominfo",
      "notifier",
      "splashscreen",
      "templatelayout",
      "template-seasons",
      "theme-everlasting",
      "theme-winter",
      "theme-spring",
      "theme-summer",
      "theme-autumn",
      "map-init",
      "toolset",
      "dn_welcome",
      "console"
    ],
    "require": [
      "${app}/app"
    ],
    "i18n": [
      "bundle"
    ]
  },
  "bundles": {
    "dn_welcome": {
      "WelcomeWidgetFactory": {
        "imgUrl": "resource('${app}:images/Welcomepicture.JPG')"
      }
    },
    "banner": {
      "BannerWidget": {
        "label": "Developer Network",
        "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
        "imagePosition": "above",
        "link": "http://developernetwork.conterra.de"
      }
    },
    "custominfo": {
      "CustomInfoToggleTool": [
        {
          "id": "customInfoTool",
          "activateOnStartup": true,
          "title": "Information",
          "tooltip": "Information",
          "iconClass": "icon-custom-info-info",
          "toolClass": "ctInfo",
          "togglable": true,
          "widgetSettings": {
            "content": "${custominfo.content}",
            "window": {
              "title": "Information",
              "marginBox": {
                "w": 300,
                "h": 250,
                "l": 25,
                "b": 70
              },
              "draggable": true,
              "closable": true,
              "modal": false,
              "maximizable": false,
              "resizable": false
            }
          }
        }
      ]
    },
    "map-init": {
      "Config": {
        "basemaps": [
          {
            "id": "topo",
            "title": "${map.basemaps.topo}",
            "basemap": "topo",
            "icon": "filter_hdr"
          }
        ],
        "view": {
          "viewmode": "2D",
          "extent": {
            "xmin": 753914,
            "ymin": 6590000,
            "xmax": 797273,
            "ymax": 6635000,
            "spatialReference": 3857
          }
        }
      }
    },
    "themes": {
      "ThemeModel": {
        "_selectedTheme": "everlasting"
      }
    },
    "templates": {
      "TemplateModel": {
        "_templates": [
          {
            "name": "seasons",
            "widgets": [
              {
                "widgetRole": "welcomeInfo",
                "window": {
                  "marginBox": {
                    "w": 700,
                    "h": 500
                  }
                }
              }
            ]
          }
        ]
      }
    },
    "toolset": {
      "ToolsetManager": {
        "toolsets": [
          {
            "id": "mapview_tools",
            "tools": [
              "*"
            ],
            "registerWidget": {
              "widgetRole": "mapview_tools"
            },
            "container": "ignore",
            "windowType": "container",
            "cssClass": "muted"
          }
        ]
      }
    }
  }
}
